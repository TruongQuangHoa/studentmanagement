@model StudentManagement.Models.tblStudentClass
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xóa Học Sinh - Lớp Học</h2>
    </div>

    <div class="container shadow p-5">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="StudentClassID" />

            <div class="form-row">
                <div class="form-group col-md-6 mb-3">
                    <label>Học Sinh</label>
                    <input type="text" class="form-control" value="@Model.student?.FullName" disabled />
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Lớp Học</label>
                    <input type="text" class="form-control" value="@Model._class?.ClassName" disabled />
                </div>
                
            </div>

            <div class="mt-4">
                <a class="btn btn-lg btn-warning p-2 me-3" href="javascript:history.back()">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-lg btn-danger p-2">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </div>
        </form>
    </div>
</main>
