                        </div>

                        <div class="card-body mt-4">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th class="text-center">Mã học sinh</th>
                                        <th class="text-center">Họ và tên</th>
                                        <th class="text-center">Ngày sinh</th>
                                        <th class="text-center">Giới tính</th>
                                        <th class="text-center">Địa chỉ</th>
                                        <th class="text-center">Tên lớp</th>
                                        <th class="text-center">Dân tộc</th>
                                        <th class="text-center">Tôn giáo</th>
                                        <th class="text-center">Tình trạng học sinh</th>
                                        <th class="text-center">Số điện thoại</th>
                                        <th class="text-center">Hình ảnh</th>
                                        <th class="text-center">Hiển thị</th>
                                        <th class="text-center">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@item.ID</td>
                                            <td class="text-center">@item.StudentID</td>
                                            <td class="text-center text-primary">
                                                <a asp-area="Admin" asp-controller="QLHocSinh" asp-action="Details"
                                                    asp-route-id="@item.ID">
                                                    @item.FullName
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                @(item.Birth.HasValue? item.Birth.Value.ToString("dd/MM/yyyy") : "")
                                            </td>
                                            <td class="text-center">@item.Gender</td>
                                            <td class="text-center">@item.Address</td>
                                            <td class="text-center">
                                                @(item.studentclass?.FirstOrDefault(hsl =>
                                                                                            hsl.IsActive)?._class?.ClassName ?? "Không có")
                                            </td>

                                            <td class="text-center">@item.Nation</td>
                                            <td class="text-center">@item.Religion</td>
                                            <td class="text-center">@item.StatusStudent</td>
                                            <td class="text-center">@item.NumberPhone</td>
                                            <td class="text-center">
                                                <img src="@item.Images" alt="Image" width="100" height="100" />
                                            </td>
                                            <td class="text-center">
                                                <form asp-area="Admin" asp-controller="QLHocSinh" asp-action="ToggleStatus"
                                                    method="post">
                                                    <input type="hidden" name="id" value="@item.ID" />
                                                    <div class="form-check form-switch d-flex justify-content-center">
                                                        <input class="form-check-input toggle-status-switch" type="checkbox"
                                                            name="IsActive" @(item.IsActive ? "checked" : "")
                                                            onchange="this.form.submit()" />
                                                    </div>
                                                </form>
                                            </td>
                                            <td class="text-center">
                                                <a asp-area="Admin" asp-controller="Student" asp-action="Edit"
                                                    asp-route-id="@item.ID" class="btn btn-primary btn-sm"
                                                    title="Chỉnh sửa"><i class="bi bi-pencil"></i></a>
                                                <a asp-area="Admin" asp-controller="Student" asp-action="Delete"
                                                    asp-route-id="@item.ID" class="btn btn-danger btn-sm" title="Xóa"><i
                                                        class="bi bi-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

